<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#cdcdcd"
        >


        <!--GitHub-->
        <LinearLayout
            android:id="@+id/ll_left_github"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal"
            android:onClick="github">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:src="@mipmap/ic_left_github"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="GitHub开源"
                android:textSize="20sp" />
        </LinearLayout>
        <!--大赏-->
        <LinearLayout
            android:id="@+id/ll_left_play"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:onClick="play">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:src="@mipmap/ic_left_play"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="打赏"
                android:textSize="20sp" />
        </LinearLayout>
        <!--免责声明-->
        <LinearLayout
            android:id="@+id/ll_left_law"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:onClick="law">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:src="@mipmap/ic_left_law"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="免责声明"
                android:textSize="20sp" />
        </LinearLayout>
        <!--建议反馈-->
        <LinearLayout
            android:id="@+id/ll_left_feedback"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:onClick="feedback">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:src="@mipmap/ic_left_feedback"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="建议反馈"
                android:textSize="20sp" />
        </LinearLayout>
        <!--应用分享-->
        <LinearLayout
            android:id="@+id/ll_left_share"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:onClick="share">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:src="@mipmap/ic_left_share"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="应用分享"
                android:textSize="20sp" />
        </LinearLayout>
        <!--检查更新-->
        <LinearLayout
            android:id="@+id/ll_left_update"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:onClick="update">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:src="@mipmap/ic_left_update"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="检查更新"
                android:textSize="20sp" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
